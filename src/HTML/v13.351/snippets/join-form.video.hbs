    <style>
      body.join #main-background {
        display: none !important;
      }

      /* Ensure join form keeps the same framed layer as other panels */
      body.join #join-game-form {
        z-index: auto;
      }

      /* Only control the video layer; do not change form z-index/background */
      body.join #join-background-video {
        position: fixed;
        inset: 0;
        width: 100vw;
        height: 100vh;
        object-fit: cover;
        z-index: -1;
        pointer-events: none;
        background: #000;
      }
    </style>
    <video
      id="join-background-video"
      autoplay
      loop
      muted
      playsinline
      preload="auto"
      src="{{world.background}}"
    ></video>
