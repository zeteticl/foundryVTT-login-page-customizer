    <style>
      body.join #main-background {
        display: none !important;
      }
      body.join #join-game {
        position: relative;
        z-index: 1;
      }
      body.join #join-background-video {
        position: fixed;
        inset: 0;
        width: 100vw;
        height: 100vh;
        object-fit: cover;
        z-index: -1;
        pointer-events: none;
        background: #000;
      }
    </style>
    <video
      id="join-background-video"
      autoplay
      loop
      muted
      playsinline
      preload="auto"
      src="{{world.background}}"
      onerror="this.style.display='none';"
    ></video>
