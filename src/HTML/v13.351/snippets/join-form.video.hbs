    <style>
      body.join #main-background {
        display: none !important;
      }

      /* Ensure join form keeps the same framed layer as other panels */
      body.join #join-game-form {
        z-index: auto;
      }

      /* Only control the video layer; do not change form z-index/background */
      body.join #join-background-video {
        position: fixed;
        inset: 0;
        width: 100vw;
        height: 100vh;
        object-fit: cover;
        z-index: -1;
        pointer-events: none;
        /* Fallback image support: use the same background URL variable
           that the default #main-background uses. This shows images when
           world.background is an IMAGE, while videos still play normally. */
        background-color: #000;
        background-image: var(--background-url);
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
      }
    </style>
    <video
      id="join-background-video"
      autoplay
      loop
      muted
      playsinline
      preload="auto"
      src="{{world.background}}"
    ></video>
